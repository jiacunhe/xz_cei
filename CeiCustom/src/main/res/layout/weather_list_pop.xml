<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingRight="20dip"
	android:layout_width="fill_parent"
	android:paddingTop="47dip"
	android:layout_height="fill_parent"
	android:background="#99000000">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:paddingBottom="80dip"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content"
		android:src="@drawable/weather_pop_bg" />

	<LinearLayout
		android:layout_height="485dip"
		android:layout_marginBottom="80dip"
		android:paddingRight="12dip"
		android:paddingLeft="3dip"
		android:paddingBottom="20dip"
		android:layout_alignParentBottom="true"
		android:layout_width="324dip"
		android:layout_alignParentRight="true"
		android:orientation="vertical">
		<ListView
			android:layout_height="fill_parent"
			android:id="@+id/weather_list_listview"
			android:divider="#00000000"
			android:layout_width="fill_parent"
			android:cacheColorHint="#00000000"
			android:layout_weight="1"
			android:scrollbars="none" />
		<LinearLayout
			android:layout_height="fill_parent"
			android:visibility="invisible"
			android:layout_weight="10"
			android:gravity="center"
			android:layout_width="fill_parent">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/weather_province"
				android:layout_height="wrap_content"
				android:src="@drawable/common_listpop_edit" />
			<ImageView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/weather_sure"
				android:layout_height="wrap_content"
				android:src="@drawable/common_listpop_clear" />
		</LinearLayout>
	</LinearLayout>



</RelativeLayout>
