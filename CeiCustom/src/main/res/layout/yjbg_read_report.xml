<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yjbg_read_report_hand"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <TextView android:id="@+id/yjbg_read_report_title"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:textSize="20dip"
        android:textStyle="bold"
        android:text="......pdf"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/yjbg_read_report_menu_is"
            android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_bottom"/>
        <FrameLayout android:id="@+id/yjbg_read_report_menu"
            android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:visibility="gone">
          <ImageView  android:id="@+id/yjbg_read_report_bottom_gone"
              android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_bottom1"/>
        <LinearLayout 
            android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingTop="17dip"
          android:gravity="center_horizontal"
          >
            <ImageView android:id="@+id/yjbg_read_report_home"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_home"/>
            <ImageView  android:id="@+id/yjbg_read_report_mulu"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_mulu"/>
            <ImageView  android:id="@+id/yjbg_read_report_fontsize"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_fontsize"/>
            <ImageView android:id="@+id/yjbg_read_report_light"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_light"/>
            <ImageView android:id="@+id/yjbg_read_report_addshuqian"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_add_shuqian"/>
            <ImageView android:id="@+id/yjbg_read_report_shuqian"
                android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/yjbg_read_report_shuqian"/>
            
        </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <FrameLayout 
        android:id="@+id/yjbg_read_report_pdfview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"></FrameLayout>
</RelativeLayout>
