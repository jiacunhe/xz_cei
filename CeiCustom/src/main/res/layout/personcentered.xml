<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="@drawable/background">
    <RelativeLayout
            android:id="@+id/top"
            android:background="@color/pad_bottomandtop_bg"
            android:fadingEdge="none"
            android:fadingEdgeLength="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <ImageButton
                android:id="@+id/home"
                android:background="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/phone_study_icon"
                android:padding="2dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon"/>
		<TextView
		    style="@style/yangshi_pad_title"
		    android:text="个人中心"
			android:id="@+id/imageView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="50.0dip"
			android:layout_toRightOf="@+id/home"/>
	</RelativeLayout>

	<LinearLayout
        android:layout_marginTop="5dip"
        android:layout_weight="5"
        android:background="@drawable/phone_studynm_bg"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout
			android:background="@drawable/grzx_left"
			android:id="@+id/personcenten_re"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">
			<Button
				android:background="@drawable/grzx_1_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/person_info"
				android:layout_alignParentTop="true"></Button>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/qccount_info"
				android:layout_below="@+id/person_info"
				android:background="@drawable/grzx_2_0"></Button>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/change_password"
				android:layout_below="@+id/qccount_info"
				android:background="@drawable/grzx_3_0"></Button>
		</RelativeLayout>
		<RelativeLayout
			android:background="@drawable/grzx_right"
			android:id="@+id/pc_re"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_toRightOf="@+id/personcenten_re">
		</RelativeLayout>
	</LinearLayout>

    <include layout="@layout/phone_study_bottom_transparentbar2"/>
</LinearLayout>