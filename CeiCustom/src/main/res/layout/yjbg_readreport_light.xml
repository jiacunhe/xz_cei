<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/yjbg_pop_light_bg"
    android:orientation="vertical" >
    <TextView android:id="@+id/yjbg_light_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"
        android:text="亮度调节"
        android:textSize="30dip"
        android:textColor="#006699"/>
<SeekBar
        android:id="@+id/yjbg_light_seekbar"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="55dip"
        android:layout_marginRight="55dip"
        android:progressDrawable="@drawable/barstyle"
        android:thumb="@drawable/yjbg_pop_light_but"
        android:thumbOffset="0dp" android:layout_width="352dp"/>
<LinearLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">
        
    <ImageButton  android:id="@+id/yjbg_light_jie"
        android:layout_width="wrap_content"
        android:paddingTop="5dip"
        android:layout_height="15dip"
        android:layout_marginLeft="55dip"
        android:background="#00000000"
        android:src="@drawable/yjbg_pop_light_jie"/>
    <ImageButton  android:id="@+id/yjbg_light_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dip"
        android:background="@drawable/yjbg_pop_light_jia"/>
</LinearLayout>
   <LinearLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip">
    <ImageButton  android:id="@+id/yjbg_light_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dip"
        android:background="@drawable/yjbg_pop_light_exit"/>
    <ImageButton  android:id="@+id/yjbg_light_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:background="@drawable/yjbg_pop_light_yes"/>
</LinearLayout>
</LinearLayout>