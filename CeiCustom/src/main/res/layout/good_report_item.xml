<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="2dp">

	<ImageView
		android:id="@+id/iv_goodbg_hand"
		android:layout_alignParentLeft="true"
		android:layout_width="100dip"
		android:layout_height="130dip"
		android:background="@drawable/report1" />
	<LinearLayout
		android:id="@+id/ll_goodbg_bot"
		android:layout_width="wrap_content"
		android:layout_height="135dip"
		android:layout_alignParentRight="true">
		<!-- <ImageButton android:id="@+id/ib_bg_jiejian" android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:background="@drawable/yjbg_report_jiejian" 
			android:layout_gravity="center" /> -->
		<ImageButton
			android:id="@+id/ib_bg_download"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_bookdownload_but"
			android:layout_gravity="center"
			android:layout_marginLeft="30dip"
			android:layout_marginRight="50dip" />

	</LinearLayout>
	<!-- <ScrollView
		android:layout_width="match_parent"
		android:layout_height="135dip"
		android:layout_marginLeft="13dip"
		android:layout_toLeftOf="@id/ll_goodbg_bot"
		android:layout_toRightOf="@id/iv_goodbg_hand"> -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="135dip"
			android:orientation="vertical"
			android:layout_marginLeft="13dip"
			android:layout_toLeftOf="@id/ll_goodbg_bot"
		android:layout_toRightOf="@id/iv_goodbg_hand">

			<TextView
				android:id="@+id/tv_goodbg_title"
				android:text="title"
				android:textColor="#000000"
				android:paddingTop="15dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="3dip">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/bglitt"
						android:layout_gravity="center" />
					<TextView
						android:id="@+id/tv_goodbg__aname_bq"
						android:layout_width="wrap_content"
						android:textColor="#000000"
						android:layout_height="wrap_content"
						android:text="  作者：" />
					<TextView
						android:id="@+id/tv_goodbg__aname"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="me"
						android:textColor="#000000" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="3dip">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/bglitt"
						android:layout_gravity="center"
						android:visibility="invisible" />
					<TextView
						android:id="@+id/tv_goodbg_price_bq"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="  价格："
						android:textColor="#000000" />
					<TextView
						android:id="@+id/tv_goodbg_price"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50￥"
						android:textColor="#FF0000" />
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/tv_goodbg_text"
				android:paddingTop="5dip"
				android:layout_width="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:lines="2"
				android:text="body" />


		</LinearLayout>
	<!-- </ScrollView> -->
	<!-- <ImageView android:layout_height="1dip" android:paddingLeft="13dip" 
		android:layout_width="fill_parent" android:layout_alignParentBottom="true" 
		android:src="#20000000" android:layout_toRightOf="@+id/iv_goodbg_hand" /> -->
</RelativeLayout>
