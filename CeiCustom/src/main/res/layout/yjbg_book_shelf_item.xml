<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="2dp">
	<LinearLayout
		android:id="@+id/yjbg_book_shelf_hand"
		android:orientation="vertical"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/yjbg_book_shelf_hand_img"

			android:layout_alignParentLeft="true"
			android:layout_width="100dip"
			android:layout_height="130dip"
			android:src="@drawable/report1" />
		<ProgressBar
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="110dip"
			android:layout_height="10dip"
			android:layout_marginTop="-30dip"
			android:visibility="gone"
			android:progressDrawable="@drawable/progressbar"
			android:id="@+id/yjbg_book_list_item_pro">
		</ProgressBar>
		<TextView
			android:id="@+id/yjbg_book_list_item_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:text="0%"
			android:background="@drawable/book_self_tv_bg"
			android:layout_marginLeft="60dip"
			android:textColor="@color/white"
			android:layout_marginTop="-30dip" />
	</LinearLayout>
	<!-- <ImageView android:id="@+id/yjbg_book_shelf_hand" android:layout_alignParentLeft="true" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:src="@drawable/bg11" /> -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="135dip"
		android:paddingLeft="20dip"
		android:layout_toRightOf="@id/yjbg_book_shelf_hand"
		android:orientation="vertical">

		<TextView
			android:id="@+id/yjbg_book_shelf_title"
			android:text="title"
			android:textColor="#000000"
			android:textSize="20sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="5dip">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/bglitt"
					android:layout_gravity="center" />
				<TextView
					android:layout_width="wrap_content"
					android:textColor="#535353"
					android:layout_height="wrap_content"
					android:text="  作者：" />
				<TextView
					android:id="@+id/yjbg_book_shelf_aname"
					android:textColor="#535353"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="me" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="5dip">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/bglitt"
					android:layout_gravity="center" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#535353"
					android:text="  价格：￥" />
				<TextView
					android:id="@+id/yjbg_book_shelf_price"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50￥"
					android:textColor="#FF0000" />
			</LinearLayout>
		</LinearLayout>
		<TextView
			android:id="@+id/yjbg_book_shelf_text"
			android:paddingTop="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:textColor="#535353"
			android:text="body" />
	</LinearLayout>
</RelativeLayout>
