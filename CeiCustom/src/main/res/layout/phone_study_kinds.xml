<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:id="@+id/full_view">

    <RelativeLayout
        android:id="@id/phone_study_top"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/pad_bottomandtop_bg">

        <ImageView
            android:id="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:src="@drawable/back_btn"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/phone_study_icon"
            android:padding="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/back_btn"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:text="分类浏览"
            android:layout_centerVertical="true"
            style="@style/yangshi_pad_title" />

        <ImageView
            android:id="@id/phone_study_downmanager"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_study_downmanager"
            android:layout_toLeftOf="@id/phone_study_search_btn"
            android:layout_marginRight="25dip" />

        <ImageView
            android:id="@id/phone_study_search_btn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_study_search"
            android:layout_toLeftOf="@id/phone_study_refresh"
            android:layout_marginRight="20dip" />

        <ImageView
            android:id="@id/phone_study_refresh"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_study_refresh"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#00000000"
        android:layout_height="fill_parent"
        android:id="@id/phone_study_progressLl"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:background="@drawable/phone_study_kindlefttop"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dip" />

            <ScrollView
                android:layout_width="fill_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:fillViewport="false"
                android:background="#e0ffffff"
                android:layout_marginRight="2dp">

                <LinearLayout
                    android:id="@id/phone_study_kinds_first_menu"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@id/phone_study_kinds_second_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@id/phone_study_kinds_third_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ListView
                android:id="@id/phone_study_kinds_listview"
                android:background="#f0ffffff"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#00000000"
                android:cacheColorHint="#00000000"></ListView>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/phone_study_bottom_transparentbar2" />

</LinearLayout>