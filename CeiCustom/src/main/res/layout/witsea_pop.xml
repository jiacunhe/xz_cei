<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#00000000">
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_centerInParent="true">

		<ImageView android:background="#90818ca4" android:padding="20dip"
			android:src="#eef6ff" android:id="@+id/center_iv"
			android:baselineAlignBottom="true" android:layout_height="454dip"
			android:layout_width="768dip" />
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-100dip"
			android:src="@drawable/close_icon" android:padding="30dip" android:layout_toRightOf="@+id/center_iv" android:id="@+id/close_icon"/>
		<LinearLayout android:layout_height="wrap_content" android:id="@+id/top_ll"
			android:layout_width="700dip" android:layout_marginLeft="37dip"
			android:layout_marginTop="30dip" android:orientation="horizontal">
			<ImageView android:layout_width="205dip" android:id="@+id/business_icon" android:scaleType="fitXY"
				android:layout_height="126dip" android:background="#FFFFFF" android:src="@drawable/witsea_default_icon"/>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_marginLeft="18dip"
				android:layout_marginTop="18dip" android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/business_name"
					android:textColor="#3300CC" android:textSize="20sp" android:text="移动学习"
					android:textStyle="bold" />
				<TextView android:layout_width="wrap_content" android:visibility="invisible"
					android:layout_height="wrap_content" android:id="@+id/business_name"
					android:textSize="15sp" android:text="类型 ： 视频" android:textColor="#000000"
					android:textStyle="bold" android:layout_marginTop="30dip" />
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:orientation="horizontal">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textColor="#000000"
						android:textSize="15sp" android:text="单价 ： " android:textStyle="bold"
						android:layout_marginTop="10dip" />
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/business_price"
						android:textColor="#CC0000" android:textSize="15sp" android:text="160元 "
						android:textStyle="bold" android:layout_marginTop="10dip" />
					<RelativeLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<ImageView android:layout_width="wrap_content" android:layout_alignParentRight="true"
							android:layout_height="wrap_content" android:src="@drawable/wit_sea_item_install"
							android:visibility="invisible"
							android:paddingTop="5dip" android:id="@+id/business_control" android:paddingRight="40dip"/>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/business_intro"
			android:layout_below="@+id/top_ll" android:paddingTop="16dip" android:textStyle="bold"
				android:paddingLeft="56dip" android:textColor="#000000" android:paddingRight="56dip"/>
	</RelativeLayout>
</RelativeLayout>