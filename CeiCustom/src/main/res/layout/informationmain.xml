<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/full_view"
	android:background="@drawable/zjzx_main_back"
>
	<RelativeLayout
		android:id="@+id/top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top"
		android:fadingEdge="none"
		android:fadingEdgeLength="0.0dip"
	>
		<ImageButton
			android:id="@+id/home"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10.0dip"
			android:background="@drawable/back" />

		<TextView
		    style="@style/yangshi_pad_title"
			android:id="@+id/imageView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="50.0dip"
			android:layout_toRightOf="@+id/home"/>

		<ImageButton
			android:id="@+id/zjzx_shuaxin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="30.0dip"
			android:background="@drawable/zjzx_shuaxin" />

		<ImageButton
			android:layout_toLeftOf="@+id/zjzx_shuaxin"
			android:id="@+id/zjzx_shoucang"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="30.0dip"
			android:background="@drawable/zjzx_shoucang" />

		<ImageButton
			android:layout_toLeftOf="@+id/zjzx_shoucang"
			android:id="@+id/zjzx_sousuo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="30.0dip"
			android:background="@drawable/zjzx_sousuo" />
	</RelativeLayout>

	<LinearLayout
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/top"
		android:weightSum="3"
	>
		<LinearLayout
			android:padding="3dip"
			android:orientation="vertical"
			android:weightSum="690"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
		>
			<RelativeLayout
				android:paddingLeft="40dip"
				android:paddingTop="10dip"
				android:paddingRight="10dip"
				android:paddingBottom="5dip"
				android:gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:layout_weight="380"
			>
				<LinearLayout
					android:id="@+id/aa"
					android:layout_width="fill_parent"
					android:layout_alignParentBottom="true"
					android:layout_height="wrap_content"
					android:gravity="center"
				>
					<ImageView
						android:id="@+id/econ_data_img_point0"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15dip"
						android:background="@drawable/econ_data_img_point1" />
					<ImageView
						android:id="@+id/econ_data_img_point1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15dip"
						android:background="@drawable/econ_data_img_point1" />
					<ImageView
						android:id="@+id/econ_data_img_point2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15dip"
						android:background="@drawable/econ_data_img_point1" />
					<ImageView
						android:id="@+id/econ_data_img_point3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15dip"
						android:background="@drawable/econ_data_img_point1" />
					<ImageView
						android:id="@+id/econ_data_img_point4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15dip"
						android:background="@drawable/econ_data_img_point1" />
				</LinearLayout>
				<RelativeLayout
					android:gravity="center"
					android:layout_centerInParent="true"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_above="@id/aa"
				>
					<Gallery
						android:id="@+id/econ_data_top"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:spacing="10dip" />
					<TextView
						android:layout_centerHorizontal="true"
						android:id="@+id/good_report_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="tile"
						android:textColor="@color/black"
						android:textSize="20dip"
						android:layout_alignBottom="@+id/econ_data_top" />
				</RelativeLayout>
			</RelativeLayout>
			<LinearLayout
				android:paddingBottom="20dip"
				android:paddingLeft="50dip"
				android:paddingRight="30dip"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="310"
			>
				<LinearLayout
					android:padding="3dip"
					android:background="@drawable/zjzx_leftbotton_bar"
					android:weightSum="6"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_left_botton_button1"
						android:background="@drawable/zjzx_left_botton_button_selected"
						android:layout_weight="1"
						android:text="最新资讯"
						android:layout_width="wrap_content"
						android:layout_height="40dip" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:background="@drawable/zjzx_left_botton_button"
						android:id="@+id/info_left_botton_button2"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="40dip" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_left_botton_button3"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="40dip"
						android:background="@drawable/zjzx_left_botton_button" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_left_botton_button4"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="40dip"
						android:background="@drawable/zjzx_left_botton_button" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_left_botton_button5"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="40dip"
						android:background="@drawable/zjzx_left_botton_button" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_left_botton_button6"
						android:layout_weight="1"
						android:text="更多..."
						android:layout_width="wrap_content"
						android:layout_height="40dip"
						android:background="@drawable/zjzx_left_botton_button" />
				</LinearLayout>
				<ListView
					android:cacheColorHint="#00000000"
					android:fadingEdge="none"
					android:divider="#b9b9b9"
					android:headerDividersEnabled="true"
					android:id="@+id/info_left_botton_listview"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
				></ListView>
			</LinearLayout>
		</LinearLayout>
		<ImageView
			android:layout_marginTop="20dip"
			android:layout_marginBottom="15dip"
			android:background="@drawable/zjzx_min_line"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" />
		<LinearLayout
			android:padding="3dip"
			android:orientation="vertical"
			android:weightSum="2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
		>
			<LinearLayout
				android:layout_marginTop="30dip"
				android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:weightSum="2"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
			>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
				>
					<LinearLayout
						android:background="@drawable/zjzx_right_botton_bar"
						android:weightSum="4"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
					>
						<Button
						    android:textStyle="bold"
							android:textSize="18sp"
							android:textColor="#0e2b76"
							android:background="@drawable/zjzx_right_top_button_selected"
							android:id="@+id/info_right_top_botton1"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="fill_parent" />
						<Button
						    android:textStyle="bold"
							android:textSize="18sp"
							android:textColor="#0e2b76"
							android:id="@+id/info_right_top_botton2"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="fill_parent"
							android:background="@drawable/zjzx_right_top_button" />
						<Button
						    android:textStyle="bold"
							android:textSize="18sp"
							android:textColor="#0e2b76"
							android:id="@+id/info_right_top_botton3"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="fill_parent"
							android:background="@drawable/zjzx_right_top_button" />
						<Button
						    android:textStyle="bold"
							android:textSize="18sp"
							android:textColor="#0e2b76"
							android:id="@+id/info_right_top_botton4"
							android:layout_weight="1"
							android:layout_width="wrap_content"
							android:layout_height="fill_parent"
							android:background="@drawable/zjzx_right_top_button" />
					</LinearLayout>
					<ListView
						android:cacheColorHint="#00000000"
						android:divider="#b9b9b9"
						android:headerDividersEnabled="true"
						android:id="@+id/info_right_top_list"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
					></ListView>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:paddingBottom="5dip"
				android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:orientation="vertical"
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
			>
				<LinearLayout
					android:layout_gravity="center_vertical"
					android:padding="3dip"
					android:background="@drawable/zjzx_leftbotton_bar"
					android:weightSum="3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:textSize="18sp"
						android:textColor="#414141"
						android:gravity="center"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:text="推荐栏目" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_right_botton_button1"
						android:background="@drawable/zjzx_left_botton_button_selected"
						android:gravity="center"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" />
					<Button
					    android:textStyle="bold"
						android:textSize="18sp"
						android:textColor="#07337a"
						android:id="@+id/info_right_botton_button2"
						android:background="@drawable/zjzx_left_botton_button"
						android:gravity="center"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" />
				</LinearLayout>
				<LinearLayout
					android:layout_marginTop="3dip"
					android:weightSum="2"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/right_bottom_parent"
					android:layout_weight="1"
				>
					<RelativeLayout
						android:padding="1dip"
						android:layout_margin="1dip"
						android:background="#FFFFFF"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_weight="1"
					>
						<TextView
							android:layout_marginTop="3dip"
							android:layout_marginBottom="5dip"
							android:textSize="12sp"
							android:textColor="#181818"
							android:singleLine="true"
							android:id="@+id/info_right_botton_textview1"
							android:gravity="center"
							android:text="国学"
							android:layout_alignParentBottom="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
						<ImageView
							android:padding="2dip"
							android:id="@+id/info_right_botton_imageview1"
							android:background="@drawable/zjzx_right_botton_default"
							android:layout_below="@+id/info_right_botton_button1"
							android:layout_above="@+id/info_right_botton_textview1"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent" />
					</RelativeLayout>
					<RelativeLayout
						android:padding="1dip"
						android:layout_margin="1dip"
						android:background="#FFFFFF"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_weight="1"
					>
						<TextView
							android:layout_marginTop="3dip"
							android:layout_marginBottom="5dip"
							android:textSize="12sp"
							android:textColor="#181818"
							android:singleLine="true"
							android:id="@+id/info_right_botton_textview2"
							android:gravity="center"
							android:text="健康"
							android:layout_alignParentBottom="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
						<ImageView
							android:padding="2dip"
							android:id="@+id/info_right_botton_imageview2"
							android:background="@drawable/zjzx_right_botton_default"
							android:layout_below="@+id/info_right_botton_button2"
							android:layout_above="@+id/info_right_botton_textview2"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent" />
					</RelativeLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_marginTop="3dip"
					android:gravity="center"
					android:paddingLeft="3dip"
					android:paddingRight="60dip"
					android:background="@drawable/zjzx_main_weatherback"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="2"
					android:id="@+id/weather_Ll"
				>
					<TextView
						android:gravity="center"
						android:id="@+id/weather_tv"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:text="点击此处查看天气"
						android:textColor="#000000" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:background="#00000000"
		android:gravity="center"
		android:id="@+id/econ_data_pro"
	>
		<ProgressBar
			android:layout_width="50dip"
			android:layout_height="50dip"
			android:gravity="center" />
	</LinearLayout>
</RelativeLayout>