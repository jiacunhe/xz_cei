<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:gravity="center">
	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="#90000000"
		android:gravity="center">
		<RelativeLayout android:layout_width="400dip"
			android:background="#eeffffff" android:layout_height="200dip">
			<ImageView android:layout_width="wrap_content" android:id="@+id/yjbg_bookself_quan"
				android:layout_alignParentRight="true"
				android:padding="10dip"
				android:layout_alignParentTop="true" android:layout_height="wrap_content"
				android:src="@drawable/yjbg_pop_jianjian_cloase"
			/>
			<LinearLayout android:orientation="vertical"
				android:layout_below="@+id/yjbg_bookself_quan" android:layout_width="320dip"
				android:layout_height="100dip"
				android:layout_marginLeft="55dip">
				<ImageView android:id="@+id/yjbg_bookself_xinx" android:layout_marginBottom="40dip"
					android:layout_width="110dip" android:layout_height="25dip"
					android:src="@drawable/book_self_bookinfo" />
				<ImageView android:id="@+id/yjbg_bookself_del"
					android:layout_width="110dip" android:layout_height="25dip"
					android:src="@drawable/book_self_bookdel" />
			</LinearLayout>
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>
