<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/welcome_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>

	<ImageView
		android:id="@+id/homepage_dzb_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/mainpage_top_part" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        android:visibility="invisible"
		android:id="@+id/botton"
	>
		<ImageView
			android:id="@+id/home_ceinet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@drawable/homepage_botton_button_3" />
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/home_witsea"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_button_2"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/home_ceinet"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/home_main_num"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_num"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/home_witsea"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/home_announcement"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_button_1"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/home_main_num"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/imageView1"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_left"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/home_announcement"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/home_personcenter"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_button_4"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/home_ceinet"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/home_disclaimer"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_button_5"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/home_personcenter"
		></ImageView>
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/imageView2"
			android:layout_width="wrap_content"
			android:src="@drawable/homepage_botton_right"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/home_disclaimer"
		></ImageView>
	</RelativeLayout>
	<RelativeLayout
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/login_1"
			android:id="@+id/imageView3"
		>
			<RelativeLayout
				android:layout_width="100dip"
				android:layout_height="100dip"
				android:layout_centerInParent="true"
			>
				<Button
					android:id="@+id/back_back"
					android:background="@drawable/back_back"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true" />
			</RelativeLayout>
		</RelativeLayout>
		<ImageView
			android:layout_width="wrap_content"
			android:background="@drawable/login_8"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/imageView3"
			android:id="@+id/imageView4"
		></ImageView>
		<LinearLayout
			android:layout_width="wrap_content"
			android:background="@drawable/login_3"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_below="@+id/imageView4"
			android:layout_alignLeft="@+id/imageView4"
			android:id="@+id/imageView5"
		>
			<RelativeLayout
				android:layout_marginTop="10dip"
				android:layout_width="300dip"
				android:layout_height="wrap_content"
			>

				<TextView
					android:gravity="right"
					android:layout_width="130dip"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="20sp"
					android:text="用户名 :" />

				<EditText
					android:maxWidth="150dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/ui_login_etborder"
					android:layout_alignParentRight="true"
					android:paddingLeft="10dip"
					android:singleLine="true"
					android:id="@+id/ui_getpassword_username" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_marginTop="10dip"
				android:layout_width="300dip"
				android:layout_height="wrap_content"
			>

				<TextView
					android:gravity="right"
					android:layout_width="130dip"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="20sp"
					android:paddingLeft="19dip"
					android:text="电子邮箱 :" />

				<EditText
					android:maxWidth="150dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:singleLine="true"
					android:paddingLeft="10dip"
					android:id="@+id/ui_getpassword_email"
					android:background="@drawable/ui_login_etborder" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_marginTop="10dip"
				android:layout_width="300dip"
				android:layout_height="wrap_content"
			>
				<ImageView
					android:layout_centerInParent="true"
					android:layout_marginTop="10dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@id/ui_login_login"
					android:src="@drawable/ui_submit_submit" />
			</RelativeLayout>
			<TextView
				android:layout_marginTop="40dip"
				android:textColor="#092982"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:gravity="bottom"
				android:text="温馨提示：" />
			<TextView
				android:padding="10dp"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:gravity="bottom"
				android:text="    密码找回成功后。我们将以邮件的形式下发到您的邮箱，请登录邮箱查看。如有疑问请拨打上方咨询电话。我们将会竭诚为您服务。" />
		</LinearLayout>
		<ImageView
			android:layout_width="wrap_content"
			android:background="@drawable/login_4"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/imageView3"
			android:layout_alignRight="@+id/imageView5"
		></ImageView>
		<ImageView
			android:layout_width="wrap_content"
			android:background="@drawable/login_5"
			android:layout_height="wrap_content"
			android:layout_below="@+id/imageView4"
			android:layout_toRightOf="@+id/imageView5"
			android:id="@+id/imageView6"
		></ImageView>
		<ImageView
			android:id="@id/ui_regist_regist"
			android:layout_width="wrap_content"
			android:background="@drawable/login_6"
			android:layout_height="wrap_content"
			android:layout_below="@+id/imageView6"
			android:layout_toRightOf="@+id/imageView5"
		></ImageView>
	</RelativeLayout>
</RelativeLayout>