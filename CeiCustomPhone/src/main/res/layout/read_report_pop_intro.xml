<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/yanjiubaogao_back"
		android:id="@+id/imageView1" />
	<ImageButton
		android:background="@drawable/read_report_pop_jianjian_cloase"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/yjbg_pop_intro_close"
		android:layout_alignParentTop="true"
		android:layout_alignRight="@+id/imageView1"
	></ImageButton>
	<ImageButton
		android:layout_alignLeft="@+id/imageView1"
		android:layout_alignTop="@+id/imageView1"
		android:layout_width="wrap_content"
		android:layout_marginTop="10dip"
		android:id="@+id/report_pop_report_img"
		android:layout_height="wrap_content"
		android:background="@drawable/read_report_report1"
		android:layout_marginLeft="10dip" />
	<LinearLayout
		android:paddingLeft="10dip"
		android:layout_toLeftOf="@+id/yjbg_bookself_quan"
		android:layout_toRightOf="@+id/report_pop_report_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>
		<RelativeLayout
			android:paddingTop="5dip"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_width="wrap_content"
		>
			<TextView
				android:id="@+id/yjbg_pop_intro_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				android:layout_marginTop="10dip"
				android:text="标题" />
		</RelativeLayout>
		<LinearLayout
			android:paddingTop="5dip"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_width="wrap_content"
		>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="@drawable/read_report_bglitt" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dip"
				android:text="作者："
				android:textColor="#000000"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/yjbg_pop_intro_zuoz"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dip"
				android:text="张三"
				android:textColor="#000000"
				android:textSize="15sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:paddingTop="5dip"
			android:layout_width="wrap_content"
		>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/read_report_point"
				android:visibility="invisible" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dip"
				android:text="价格："
				android:textColor="#000000"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/yjbg_pop_intro_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dip"
				android:text="22"
				android:textColor="#000000"
				android:textSize="15sp" />
		</LinearLayout>
	</LinearLayout>
	<ScrollView
		android:padding="5dip"
		android:layout_marginTop="10dip"
		android:layout_alignLeft="@+id/imageView1"
		android:layout_alignRight="@+id/imageView1"
		android:layout_alignBottom="@+id/imageView1"
		android:layout_below="@+id/report_pop_report_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#003366"
				android:textSize="30sp"
				android:text="简介："
				android:layout_marginBottom="10dip" />
			<TextView
				android:id="@+id/yjbg_pop_intro_content"
				android:paddingLeft="20dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:text="22dip"
				android:textColor="#000000" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
