<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="50dip"
>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dip"
	>
		<ImageView
			android:layout_marginRight="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/zizx_delete"
			android:id="@+id/common_listpop_listviewitem_mark"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" />
		<LinearLayout
			android:layout_marginRight="10dip"
			android:layout_toLeftOf="@+id/common_listpop_listviewitem_mark"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
				<ImageView
					android:layout_marginLeft="5dip"
					android:layout_centerVertical="true"
					android:id="@+id/info_point"
					android:layout_alignParentLeft="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/zjzx_point" />
				<TextView
					android:layout_centerVertical="true"
					android:singleLine="true"
					android:layout_alignParentRight="true"
					android:id="@+id/info_time"
					android:layout_width="wrap_content"
					android:paddingTop="3dip"
					android:layout_height="wrap_content"
					android:textSize="16px"
					android:textColor="#4f4e4e" />
				<TextView
					android:layout_marginLeft="5dip"
					android:singleLine="true"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/info_point"
					android:layout_toLeftOf="@+id/info_time"
					android:id="@+id/info_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#0e2b76"
					android:textSize="28px" />
			</RelativeLayout>
			<RelativeLayout
				android:paddingLeft="5dip"
				android:paddingRight="5dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
				<ImageView
					android:visibility="invisible"
					android:layout_marginLeft="5dip"
					android:layout_centerVertical="true"
					android:id="@+id/info_point_2"
					android:layout_alignParentLeft="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/zjzx_point" />
				<TextView
					android:layout_marginLeft="5dip"
					android:layout_toRightOf="@+id/info_point_2"
					android:lines="2"
					android:layout_centerVertical="true"
					android:singleLine="true"
					android:layout_toLeftOf="@+id/common_listpop_listviewitem_mark"
					android:id="@+id/info_subhead"
					android:layout_width="wrap_content"
					android:textColor="#424040"
					android:textSize="18px"
					android:layout_height="wrap_content"
					android:paddingTop="5dip" />
			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>