<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_econ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f4f6" >

    <RelativeLayout
        android:id="@+id/econ_main_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/phone_study_topbg" >

        <TextView
            android:id="@+id/econ_main_top_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="中经智库"
            style="@style/yangshi_phone_title_small" />

        <TextView
            android:id="@+id/econ_main_top_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/yangshi_phone_title_big"
             />

        <TextView
            android:id="@+id/econ_main_top_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:text="数据查询"
            style="@style/yangshi_phone_title_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/econ_main_content"
        android:layout_below="@+id/econ_main_top"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
    >

        <com.hyrt.readreport.view.DetialGallery
            android:id="@+id/econ_main_grid"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/read_report_goodbg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/econ_main_lin_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="4dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/econ_main_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_img_ratio" />

                <ImageView
                    android:id="@+id/econ_main_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/home_img_ratio" />     
                <ImageView
                    android:id="@+id/econ_main_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/home_img_ratio" /> 
                <ImageView
                    android:id="@+id/econ_main_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/home_img_ratio" /> 
                 <ImageView
                    android:id="@+id/econ_main_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/home_img_ratio" /> 
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/econ_main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/phone_study_bottombg"
        android:baselineAligned="false"
        android:weightSum="4" >

        <RelativeLayout
            android:id="@+id/phone_study_new"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/econ_main_botton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/econ_data_kx" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_study_nominate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/econ_main_botton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/econ_data_zs" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_study_kind"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/econ_main_botton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:src="@drawable/econ_data_fx1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_study_mymore"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/econ_main_botton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/econ_data_zb" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/econ_data_pro"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/econ_main_bottom"
        android:layout_below="@+id/econ_main_content"
        android:cacheColorHint="@null"
        android:dividerHeight="1dip"
        android:divider="#c8c8c8"
        
        />

</RelativeLayout>