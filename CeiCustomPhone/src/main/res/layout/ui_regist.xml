<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/welcome"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>

	<ImageView
		android:id="@+id/top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="@drawable/regist_1" />

	<ImageView
		android:id="@+id/botton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/regist_3" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/botton"
		android:layout_below="@+id/top"
	>

		<RelativeLayout
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:id="@+id/regist_top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:background="@drawable/regist_2_1"
		>

			<ImageView
				android:id="@+id/login_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="40dip"
				android:background="@drawable/regist_text" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/login_text"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="25dip"
				android:background="@drawable/login_cei" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/regist_botton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="@drawable/regist_2_3"
		>

			<Button
				android:id="@+id/ui_regist_login"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:background="@drawable/regist_button" />

			<Button
				android:id="@+id/ui_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@+id/ui_regist_login"
				android:layout_below="@+id/ui_regist_login"
				android:layout_marginTop="30dip"
				android:background="@drawable/login_back" />

			<Button
				android:id="@+id/ui_regist_regist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignRight="@+id/ui_regist_login"
				android:layout_below="@+id/ui_regist_login"
				android:layout_marginTop="30dip"
				android:background="@drawable/regist_login" />
		</RelativeLayout>

		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/regist_botton"
			android:layout_below="@+id/regist_top"
			android:background="@drawable/regist_2_2"
		>

			<LinearLayout
				android:id="@+id/ui_regist_etparent"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
			>
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="用户名"
						android:paddingLeft="30dip"
						android:id="@+id/regist_1"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_username_text"
						android:singleLine="true"
						android:textColor="#000000"
						android:textSize="15sp" />
					<ImageView
						android:layout_marginLeft="10dip"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="密码"
						android:paddingLeft="30dip"
						android:id="@+id/regist_2"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_password_text"
						android:singleLine="true"
						android:textColor="#000000"
						android:password="true"
						android:textSize="15sp" />
					<ImageView
						android:layout_marginLeft="10dip"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="确认密码"
						android:id="@+id/regist_3"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_password_text_1"
						android:singleLine="true"
						android:textColor="#000000"
						android:password="true"
						android:paddingLeft="30dip"
						android:textSize="15sp" />
					<ImageView
						android:layout_marginLeft="10dip"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="昵称"
						android:id="@+id/regist_4"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_nicheng_text"
						android:singleLine="true"
						android:textColor="#000000"
						android:paddingLeft="30dip"
						android:textSize="15sp" />
					<ImageView
						android:layout_marginLeft="10dip"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="电子邮件"
						android:id="@+id/regist_5"
						android:paddingLeft="30dip"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/getpassword_edittext"
						android:singleLine="true"
						android:textColor="#000000"
						android:textSize="15sp" />
					<ImageView
						android:layout_marginLeft="10dip"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<LinearLayout
					android:layout_gravity="center_vertical"
					android:gravity="center_horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<TextView
						android:maxWidth="280dip"
						android:gravity="center_vertical"
						android:layout_gravity="center_vertical"
						android:textSize="15sp"
						android:textColor="#000000"
						android:text="性别："
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />
					<RadioGroup
						android:id="@+id/lines"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dip"
						android:layout_toRightOf="@+id/textview666"
						android:checkedButton="@+id/wlan"
						android:orientation="horizontal"
					>
						<RadioButton
							android:id="@+id/economic_register_register_query_accurate_query_radio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dip"
							android:checked="true"
							android:text="男"
							android:textColor="#000000"
							android:textSize="15sp" />

						<RadioButton
							android:id="@+id/economic_register_register_qussssery_vague_query_radio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dip"
							android:text="女"
							android:textColor="#000000"
							android:textSize="15sp" />
					</RadioGroup>
				</LinearLayout>

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="证件类型"
						android:paddingLeft="30dip"
						android:id="@+id/regist_6"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_zjlx_text"
						android:singleLine="true"
						android:textColor="#000000"
						android:textSize="15sp" />
					<ImageView
						android:visibility="invisible"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="证件号码"
						android:id="@+id/regist_7"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_zjhm_text"
						android:singleLine="true"
						android:textColor="#000000"
						android:paddingLeft="30dip"
						android:textSize="15sp" />
					<ImageView
						android:visibility="invisible"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>

				<RelativeLayout
					android:layout_marginBottom="20dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dip"
				>
					<EditText
						android:maxWidth="280dip"
						android:hint="电话"
						android:id="@+id/regist_8"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/login_phone_text"
						android:singleLine="true"
						android:paddingLeft="30dip"
						android:textColor="#000000"
						android:textSize="15sp" />
					<ImageView
						android:visibility="invisible"
						android:layout_centerVertical="true"
						android:layout_toRightOf="@+id/regist_8"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/grzx_star" />
				</RelativeLayout>
			</LinearLayout>
		</ScrollView>
	</RelativeLayout>

</RelativeLayout>