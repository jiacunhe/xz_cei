<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ffffff"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<ImageView
		android:layout_marginTop="40dip"
		android:background="@drawable/grzx_xgmm"
		android:id="@+id/qccountinfo"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" />
	<ImageView
		android:layout_below="@+id/qccountinfo"
		android:id="@+id/qccountinfo_line"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:background="@drawable/grzx_line" />
	<RelativeLayout
		android:layout_below="@+id/qccountinfo_line"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
			>
				<LinearLayout
					android:weightSum="3"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:gravity="right"
						android:layout_weight="2"
						android:id="@+id/old_password"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="原密码:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/changepassword_passwordold"
							android:background="@drawable/grzx_textview_background"
							android:password="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_weight="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:layout_weight="2"
						android:gravity="right"
						android:id="@+id/old_password"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="新密码:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/changepassword_password1"
							android:background="@drawable/grzx_textview_background"
							android:password="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_weight="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:layout_weight="2"
						android:gravity="right"
						android:id="@+id/old_password"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="新密码:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/changepassword_password2"
							android:background="@drawable/grzx_textview_background"
							android:password="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:weightSum="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:gravity="right"
						android:layout_weight="2"
						android:id="@+id/tv_email"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="电子邮箱:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/et_change_email"
							android:background="@drawable/grzx_textview_background"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:weightSum="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:gravity="right"
						android:layout_weight="2"
						android:id="@+id/tv_card_kind"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="证件类型:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/et_card_kind"
							android:background="@drawable/grzx_textview_background"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:weightSum="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:gravity="right"
						android:layout_weight="2"
						android:id="@+id/tv_card_num"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="证件号码:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/et_card_num"
							android:background="@drawable/grzx_textview_background"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:weightSum="3"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TextView
						android:gravity="right"
						android:layout_weight="2"
						android:id="@+id/tv_kind_num"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:textColor="#000000"
						android:text="电话号码:" />
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
					>
						<EditText
							android:maxWidth="180dip"
							android:singleLine="true"
							android:id="@+id/et_phone_num"
							android:background="@drawable/grzx_textview_background"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<Button
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dip"
					android:layout_marginBottom="20dp"
					android:background="@drawable/change_button"
					android:id="@+id/changepassword_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</ScrollView>
	</RelativeLayout>
</RelativeLayout>  