<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@null"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="10dip"
	android:padding="3dip"
	android:paddingRight="10dip"
	android:orientation="vertical"
>
	<RelativeLayout
		android:id="@+id/topfirst"
		android:layout_alignParentTop="true"
		android:layout_marginTop="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<ImageView
			android:layout_marginLeft="5dip"
			android:layout_centerVertical="true"
			android:id="@+id/info_point"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/zjzx_point" />
		<TextView
			android:layout_marginRight="15dip"
			android:text="time"
			android:layout_centerVertical="true"
			android:id="@+id/econ_news_time_text"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#4f4e4e"
			android:textSize="16.0px" />
		<TextView
			android:singleLine="true"
			android:text="title"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/info_point"
			android:layout_toLeftOf="@+id/econ_news_time_text"
			android:layout_marginLeft="5dip"
			android:id="@+id/econ_news_title_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#0e2b76"
			android:textSize="28.0px" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<ImageView
			android:visibility="invisible"
			android:layout_marginLeft="5dip"
			android:layout_centerVertical="true"
			android:id="@+id/info_point_2"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/zjzx_point" />
		<TextView
			android:layout_marginRight="10dip"
			android:layout_toRightOf="@+id/info_point_2"
			android:lines="2"
			android:gravity="center_vertical"
			android:layout_below="@+id/topfirst"
			android:text="subhead"
			android:layout_marginLeft="5dip"
			android:id="@+id/econ_news_content_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#424040"
			android:textSize="18.0px" />
	</RelativeLayout>
</LinearLayout>