<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/welcome"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_big"
>
	<RelativeLayout
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/background_small"
	>
		<RelativeLayout
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:id="@+id/login_top"
			android:layout_marginTop="40dip"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:layout_centerHorizontal="true"
				android:id="@+id/login_text"
				android:layout_alignParentTop="true"
				android:background="@drawable/login_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageView
				android:layout_marginTop="25dip"
				android:layout_centerHorizontal="true"
				android:layout_below="@+id/login_text"
				android:background="@drawable/login_cei"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/login_middle"
			android:layout_marginTop="45dip"
			android:layout_below="@+id/login_top"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<EditText
				android:textSize="15sp"
				android:id="@+id/ui_login_username"
				android:paddingLeft="30dip"
				android:singleLine="true"
				android:hint="用户名"
				android:maxWidth="280dip"
				android:background="@drawable/login_username_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<EditText
				android:maxWidth="280dip"
				android:textSize="15sp"
				android:layout_below="@+id/ui_login_username"
				android:id="@+id/ui_login_password"
				android:layout_marginTop="18dip"
				android:paddingLeft="30dip"
				android:singleLine="true"
				android:password="true"
				android:hint="密码"
				android:background="@drawable/login_password_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageButton
				android:id="@+id/ui_getpassword"
				android:layout_marginTop="30dip"
				android:layout_below="@+id/ui_login_password"
				android:background="@drawable/login_forgetpassword"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_centerHorizontal="true"
			android:layout_marginTop="25dip"
			android:layout_below="@+id/login_middle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/relativeLayout1"
		>
			<Button
				android:layout_alignParentTop="true"
				android:id="@+id/ui_login_login"
				android:layout_centerHorizontal="true"
				android:background="@drawable/login_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<Button
				android:id="@+id/ui_back"
				android:background="@drawable/login_back"
				android:layout_alignLeft="@+id/ui_login_login"
				android:layout_marginTop="50dip"
				android:layout_below="@+id/ui_login_login"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<Button
				android:id="@+id/ui_login_regist"
				android:background="@drawable/login_regist"
				android:layout_alignRight="@+id/ui_login_login"
				android:layout_marginTop="50dip"
				android:layout_below="@+id/ui_login_login"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
