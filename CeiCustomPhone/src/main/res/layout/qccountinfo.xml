<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ffffff"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<ImageView
		android:layout_marginTop="40dip"
		android:background="@drawable/grzx_zhxx"
		android:id="@+id/qccountinfo"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" />
	<ImageView
		android:layout_below="@+id/qccountinfo"
		android:id="@+id/qccountinfo_line"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:background="@drawable/grzx_line" />
	<ScrollView
		android:layout_below="@+id/qccountinfo_line"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		>
		<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="账号:"
					android:textColor="#000000"
					android:gravity="right"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_userid"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="积分:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_integral"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>  