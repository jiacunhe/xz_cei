<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="210dip"
	android:layout_height="220dip"
	android:orientation="vertical"
	android:background="@drawable/read_report_book_self_pop_bg">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="15dip"
		android:layout_marginBottom="10dip">
		<TextView
			android:layout_marginLeft="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dip"
			android:textColor="#003366"
			android:text="更换背景" />
		<LinearLayout
			android:layout_marginLeft="30dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp">
			<ImageView
				android:id="@+id/report_item_bg1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/read_report_book_sky1" />
			<ImageView
				android:id="@+id/report_item_bg2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dip"
				android:background="@drawable/read_report_book_sky1" />
			<ImageView
				android:id="@+id/report_item_bg3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dip"
				android:background="@drawable/read_report_book_sky1" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginLeft="10dip"
		android:background="@drawable/read_report_book_self_pop_bg_line" />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"

		android:layout_marginBottom="10dip">

		<TextView
			android:layout_marginTop="10dip"
			android:layout_marginLeft="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dip"
			android:textColor="#003366"
			android:text="修改图书排序" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="25dp"
			android:gravity="center_vertical">
			<ImageView
				android:id="@+id/report_item_sort2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dip"
				android:background="@drawable/read_report_book_sort_time" />
				<ImageView
				android:id="@+id/report_item_sort1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/read_report_book_sort_name" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginLeft="10dip"
		android:background="@drawable/read_report_book_self_pop_bg_line" />
	<!-- <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" 
		android:layout_weight="1" android:orientation="vertical" > </LinearLayout> -->

</LinearLayout>