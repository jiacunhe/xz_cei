<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="2dp">
	<LinearLayout
		android:id="@+id/yjbg_book_shelf_hand"
		android:orientation="vertical"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/yjbg_book_shelf_hand_img"
			android:layout_alignParentLeft="true"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:background="@drawable/read_report_report1" />
		<ProgressBar
			style="?android:attr/progressBarStyleHorizontal"
			android:visibility="gone"
			android:layout_width="75dp"
			android:layout_height="5dip"
			android:layout_marginTop="-30dip"
			android:progressDrawable="@drawable/progressbar"
			android:id="@+id/yjbg_book_list_item_pro">
		</ProgressBar>
		<TextView
			android:id="@+id/yjbg_book_list_item_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:text="0%"
			android:background="@drawable/book_self_tv_bg"
			android:layout_marginLeft="40dip"
			android:textColor="#ffffff"
			android:layout_marginTop="-30dip" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:layout_toRightOf="@id/yjbg_book_shelf_hand"
		android:orientation="vertical">

		<TextView
			android:id="@+id/yjbg_book_shelf_title"
			android:text="title"
			android:textColor="#054b93"
			android:textSize="28px"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="5dip">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/bglitt"
					android:layout_gravity="center" />
				<TextView
					android:layout_width="wrap_content"
					android:textColor="#535353"
					android:textSize="18px"
					android:layout_height="wrap_content"
					android:text="  作者：" />
				<TextView
					android:id="@+id/yjbg_book_shelf_aname"
					android:textColor="#535353"
					android:textSize="18px"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="me" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="5dip">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/bglitt"
					android:layout_gravity="center" />
				<TextView
					android:textSize="20px"
					android:textColor="#535353"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="  价格：￥" />
				<TextView
					android:textSize="20px"
					android:textColor="#e00404"
					android:id="@+id/yjbg_book_shelf_price"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50" />
			</LinearLayout>
		</LinearLayout>
		<TextView
			android:textSize="18px"
			android:textColor="#101010"
			android:id="@+id/yjbg_book_shelf_text"
			android:paddingTop="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:singleLine="true"
			android:text="body" />
	</LinearLayout>
</RelativeLayout>
