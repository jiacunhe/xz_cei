<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f0f4f6"
>
	<RelativeLayout
		android:id="@+id/top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/phone_study_topbg"
		android:layout_alignParentTop="true"
	>
		<ImageView
			android:id="@+id/zjzx_bianji"
			android:layout_marginLeft="15dip"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/zizx_bianji"
			android:layout_alignParentLeft="true" />
		<TextView
		    style="@style/yangshi_phone_title_big"
		    android:text="我的收藏"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true" />
		<ImageView
			android:id="@+id/zjzx_qingkong"
			android:layout_marginRight="15dip"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/zjzx_qingkong"
			android:layout_alignParentRight="true" />
	</RelativeLayout>

	<LinearLayout
		android:gravity="center_vertical"
		android:background="@drawable/botton_back"
		android:id="@+id/botton"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="4"
	>
		<RelativeLayout
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:id="@+id/zjzx_botton_1"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/zjzx_botton_1" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:id="@+id/zjzx_botton_2"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/zjzx_botton_2" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:id="@+id/zjzx_botton_3"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/zjzx_botton_3" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/zjzx_botton_4" />
		</RelativeLayout>
	</LinearLayout>
	<ListView
		android:layout_below="@+id/top"
		android:layout_above="@+id/botton"
		android:id="@+id/read_report_main_lv"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		 android:cacheColorHint="@null"
        android:dividerHeight="1dip"
        android:divider="#c8c8c8"
	></ListView>

</RelativeLayout>
