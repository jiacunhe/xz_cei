<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_big">
	<RelativeLayout
		android:id="@+id/top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/phone_study_topbg"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		android:layout_alignParentTop="true">
		<TextView
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="中经智库"
			style="@style/yangshi_phone_title_small"
			android:layout_alignParentLeft="true"
			android:id="@+id/read_report_back" />
		<TextView
		    android:id="@+id/title"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/yangshi_phone_title_big"
			android:text="研究报告"
			android:layout_centerInParent="true" />
		<ImageView
			android:id="@+id/read_report_bookself"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/read_report_bookshelf"
			android:layout_alignParentRight="true" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/botton"
		android:weightSum="5"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/read_report_bottombg"
			android:gravity="center_vertical"
			android:weightSum="5">
			<!-- <RelativeLayout android:layout_weight="1" android:layout_width="wrap_content" 
				android:layout_height="wrap_content"> <ImageView android:layout_centerInParent="true" 
				android:id="@+id/read_report_home" android:layout_width="wrap_content" android:layout_height="wrap_content" 
				android:background="@drawable/home" /> </RelativeLayout> -->
			<RelativeLayout
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView
					android:layout_centerInParent="true"
					android:id="@+id/read_report_jp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/read_report_jp1" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView
					android:layout_centerInParent="true"
					android:id="@+id/read_report_ph"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/read_report_ph1" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView
					android:layout_centerInParent="true"
					android:id="@+id/read_report_fl"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/read_report_fl1" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView
					android:layout_centerInParent="true"
					android:id="@+id/read_report_mf"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/read_report_mf1" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView
					android:layout_centerInParent="true"
					android:id="@+id/read_report_find"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/read_report_find1" />
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_below="@+id/top"
		android:layout_above="@+id/botton"
		android:weightSum="3">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2">
			<RelativeLayout
				android:id="@+id/read_report_midtop"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<com.hyrt.readreport.view.DetialGallery
					android:background="@drawable/courseware_big_default_icon"
					android:id="@+id/read_report_main_ga"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" >
					</com.hyrt.readreport.view.DetialGallery>
				<RelativeLayout
					android:background="@drawable/read_report_goodbg"
					android:layout_width="fill_parent"
					android:layout_alignParentBottom="true"
					android:layout_height="wrap_content">
					<TextView
						android:layout_centerVertical="true"
						android:id="@+id/read_report_title"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="20dp"
						android:textColor="#ffffff"
						android:textSize="24px"
						android:singleLine="true" />
					<LinearLayout
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="20dp"
						android:paddingTop="4dp"
						android:layout_alignParentRight="true">
						<ImageView
							android:id="@+id/read_report_point1"
							android:layout_width="wrap_content"
							android:src="@drawable/home_img_ratio"
							android:layout_height="wrap_content" />
						<ImageView
							android:id="@+id/read_report_point2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dip"
							android:src="@drawable/home_img_ratio" />
						<ImageView
							android:id="@+id/read_report_point3"
							android:layout_width="wrap_content"
							android:src="@drawable/home_img_ratio"
							android:layout_marginLeft="10dp"
							android:layout_height="wrap_content" />
						<ImageView
							android:id="@+id/read_report_point4"
							android:layout_width="wrap_content"
							android:src="@drawable/home_img_ratio"
							android:layout_marginLeft="10dp"
							android:layout_height="wrap_content" />
						<ImageView
							android:id="@+id/read_report_point5"
							android:layout_width="wrap_content"
							android:src="@drawable/home_img_ratio"
							android:layout_marginLeft="10dp"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</RelativeLayout>
			</RelativeLayout>
		</LinearLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<TextView
				android:id="@+id/read_report_more"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:text="更多..."
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textSize="15dp"
				android:textColor="#000000"
				android:background="#19000000"
				android:gravity="center"
				android:layout_alignParentBottom="true" />
			<GridView
				android:numColumns="3"
				android:id="@+id/read_report_main_gv"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_above="@+id/read_report_more"></GridView>
		</RelativeLayout>
	</LinearLayout>





</RelativeLayout>
