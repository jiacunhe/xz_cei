<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ffffff"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="2dp">

	<ImageView
		android:layout_gravity="center"
		android:id="@+id/iv_goodbg_hand"
		android:layout_alignParentLeft="true"
		android:background="@drawable/read_report_report1"
		android:layout_width="80dp"
		android:layout_height="100dp"
		android:layout_marginRight="5dp" />
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/read_report_buts"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageButton
				android:id="@+id/ib_bg_download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/read_report_bookdownload_but"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" />
		</LinearLayout>
		<LinearLayout 
		   android:layout_toLeftOf="@+id/read_report_buts"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:orientation="vertical"
			android:layout_width="wrap_content">
			<LinearLayout
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView
					android:layout_centerVertical="true"
					android:id="@+id/tv_goodbg_title"
					android:text="title                                          "
					android:textColor="#054b93"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toLeftOf="@+id/read_report_buts"
					android:singleLine="true"
					android:textSize="28px" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="3dip">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/read_report_bglitt"
						android:layout_gravity="center" />
					<TextView
					android:id="@+id/tv_goodbg__aname_bq"
						android:layout_width="wrap_content"
						android:textColor="#535353"
						android:layout_height="wrap_content"
						android:textSize="18px"
						android:text="  作者：" />
					<TextView
						android:id="@+id/tv_goodbg__aname"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="me"
						android:textSize="18px"
						android:textColor="#535353" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="3dip">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/read_report_bglitt"
						android:layout_gravity="center"
						android:visibility="invisible" />
					<TextView
					android:id="@+id/tv_goodbg_price_bq"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="价格 : ￥"
						android:textColor="#535353"
						android:textSize="20px" />
					<TextView
						android:id="@+id/tv_goodbg_price"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50"
						android:textSize="20px"
						android:textColor="#e00404" />
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/tv_goodbg_text"
				android:paddingTop="3dip"
				android:paddingBottom="2dp"
				android:layout_width="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_height="wrap_content"
				android:textColor="#101010"
				android:textSize="18px"
				android:singleLine="true"
				android:text="body" />


		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
