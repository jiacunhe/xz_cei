<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ffffff"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<ImageView
		android:layout_marginTop="40dip"
		android:background="@drawable/grzx_grxx"
		android:id="@+id/qccountinfo"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" />
	<ImageView
		android:layout_below="@+id/qccountinfo"
		android:id="@+id/qccountinfo_line"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:background="@drawable/grzx_line" />
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/qccountinfo_line"
	>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="登录名:"
					android:textColor="#000000"
					android:gravity="right"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_loginname"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="姓名:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_name"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:layout_marginTop="20dip"
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/lin2"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="性别:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_sex"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="证件类型:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:gravity="left"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_zhengjian"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="证件号码:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:gravity="left"
					android:layout_weight="1"
					android:id="@+id/personinfo_zhengjiannum"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="电话:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_phonenum"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="电子邮箱:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_email"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:weightSum="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
			>
				<TextView
					android:layout_weight="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="单位:"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
				<TextView
					android:layout_marginLeft="10dip"
					android:layout_weight="1"
					android:singleLine="true"
					android:id="@+id/personinfo_danwei"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textColor="#000000"
					android:textSize="18sp"
				>
				</TextView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>